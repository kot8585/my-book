// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  idx    Int     @id @default(autoincrement())
  userId String   
  email String  @unique
  name  String?
  image String?
  type String @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model UserBook {
  userIdx Int
  isbn String 
  title String
  author String
  categoryName String?
  //toRead reading complete 
  status String
  // ebook, paper, 
  type String
  comment String @db.VarChar(255)
  @@unique([userIdx, isbn])
}

model Post {
  userIdx Int 
  isbn String @db.VarChar(255)
  idx Int @id @default(autoincrement())
  page Int 
  title String? @db.VarChar(255)
  content String?
  createAt DateTime @default(now())
  updateAt DateTime?
  isPublic Boolean 
  bookMarkUserIdx String?
  likeUserIdx String?
}

model Comment {
  postIdx Int
  userIdx Int
  idx Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

